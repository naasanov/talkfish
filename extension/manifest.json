{
  "manifest_version": 3,
  "name": "Talkfish interview feedback",
  "version": "1.0",
  "description": "realtime interview feedback",
  "permissions": [
    "storage",
    "activeTab",
    "tabCapture",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_popup": "src/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/scripts/*.js",
        "src/resources/overlay.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}