{
  "manifest_version": 3,
  "name": "Talkfish interview feedback",
  "version": "1.0",
  "description": "realtime interview feedback",
  "permissions": ["storage", "activeTab","microphone"],
  "background": {
    "service_worker": "background.js"
  },
  
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["scripts/*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
